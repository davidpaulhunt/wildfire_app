= form_for(@location) do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.select :state, us_states
  .field
    = f.label "Has a prevention program"
    = f.check_box :prevention_program
    %br/
    %br
  .actions
    = f.submit(:value => "Submit", :class => "btn btn-success")